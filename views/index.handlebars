<div class="container">
  <div class="row justify-content-center mt-5">
    <form action="/login" method="POST">
      <h1>Account Login</h1>
      <div class="form-group mt-5">
        <input type="Email" class="form-control border border-dark" aria-describedby="emailHelp" placeholder="Email"
          name="email" value="{{ userEmail}}">
      </div>
      <div class="form-group">
        <input type="password" class="form-control border border-dark" placeholder="Password" name="password">
      </div>
      {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{ error }}
      </div>
      {{/if}}
      <button type="submit" class="btn btn-outline-primary col-6 offset-3 mt-3">Sign in</button>
    </form>

  </div>
</div>